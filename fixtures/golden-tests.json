{
  "$schema": "./golden-tests.schema.json",
  "version": "1.0",
  "mcp_name": "Nigeria Law MCP",
  "description": "Golden contract tests for the Nigeria Law MCP covering BOFIA (banking) and NITDA Act (technology) legislation",
  "tests": [
    {
      "id": "ng-001",
      "category": "article_retrieval",
      "description": "Retrieve Section 1 of the NITDA Act 2007 — Establishment of the Agency",
      "tool": "get_provision",
      "input": {
        "document_id": "nitda-act-2007",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["Agency"],
        "fields_present": ["results"],
        "text_not_empty": true
      }
    },
    {
      "id": "ng-002",
      "category": "article_retrieval",
      "description": "Retrieve Section 6 of the NITDA Act 2007 — Functions of the Agency",
      "tool": "get_provision",
      "input": {
        "document_id": "nitda-act-2007",
        "section": "6"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["Agency", "framework"],
        "fields_present": ["results"],
        "text_not_empty": true
      }
    },
    {
      "id": "ng-003",
      "category": "article_retrieval",
      "description": "Retrieve Section 1 of BOFIA 2004 — Functions of the Central Bank",
      "tool": "get_provision",
      "input": {
        "document_id": "bofia-2004",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["Central Bank", "Nigeria"],
        "fields_present": ["results"],
        "text_not_empty": true
      }
    },
    {
      "id": "ng-004",
      "category": "article_retrieval",
      "description": "Retrieve Section 2 of BOFIA 2004 — Banking business",
      "tool": "get_provision",
      "input": {
        "document_id": "bofia-2004",
        "section": "2"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["banking business", "licence"],
        "fields_present": ["results"],
        "text_not_empty": true
      }
    },
    {
      "id": "ng-005",
      "category": "search",
      "description": "Full-text search for 'banking licence' returns BOFIA provisions",
      "tool": "search_legislation",
      "input": {
        "query": "banking licence"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["banking", "licence"]
      }
    },
    {
      "id": "ng-006",
      "category": "search",
      "description": "Full-text search for 'information technology' returns NITDA Act provisions",
      "tool": "search_legislation",
      "input": {
        "query": "information technology"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["information technology"]
      }
    },
    {
      "id": "ng-007",
      "category": "search",
      "description": "Full-text search for 'Central Bank' returns BOFIA provisions",
      "tool": "search_legislation",
      "input": {
        "query": "Central Bank"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["Central Bank"]
      }
    },
    {
      "id": "ng-008",
      "category": "article_retrieval",
      "description": "Retrieve all provisions of NITDA Act by omitting section",
      "tool": "get_provision",
      "input": {
        "document_id": "nitda-act-2007"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 10,
        "text_not_empty": true
      }
    },
    {
      "id": "ng-009",
      "category": "currency_check",
      "description": "Check currency status for NITDA Act 2007",
      "tool": "check_currency",
      "input": {
        "document_id": "nitda-act-2007"
      },
      "assertions": {
        "result_not_empty": true,
        "text_not_empty": true
      }
    },
    {
      "id": "ng-010",
      "category": "citation",
      "description": "Validate citation for BOFIA Section 1",
      "tool": "validate_citation",
      "input": {
        "citation": "Section 1, Banks and Other Financial Institutions Act"
      },
      "assertions": {
        "result_not_empty": true,
        "text_not_empty": true
      }
    },
    {
      "id": "ng-011",
      "category": "negative_test",
      "description": "Non-existent Nigerian Act returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "document_id": "Fictional Digital Naira Protection Act 2099",
        "section": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "ng-012",
      "category": "negative_test",
      "description": "Malformed section number returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "document_id": "nitda-act-2007",
        "section": "999ZZZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
